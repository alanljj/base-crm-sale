<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="product_template_form_view_manufacturer" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">           
                <separator string="Suppliers" position="before">
                    <separator string="Manufacturer"/>
                    <group>
                        <field name="manufacturer_id" style="width: 35%%"/>
                        <field name="manufacturer_code" style="width: 25%%"/>
                    </group>
                </separator>
            </field>
        </record>        
    </data>
</openerp>